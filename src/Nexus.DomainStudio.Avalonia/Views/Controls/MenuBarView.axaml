<!-- Views/Controls/MenuBarView.axaml -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:menu="clr-namespace:Nexus.DomainStudio.Avalonia.Menu"
             x:Class="Nexus.DomainStudio.Avalonia.Views.Controls.MenuBarView">

    <Menu ItemsSource="{Binding Items}">
        <Menu.ItemTemplate>
            <DataTemplate>
                <MenuItem Header="{Binding Title}" Command="{Binding Command}" ItemsSource="{Binding Children}" />
            </DataTemplate>
        </Menu.ItemTemplate>
    </Menu>

</UserControl>