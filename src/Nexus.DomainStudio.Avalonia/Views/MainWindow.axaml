<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Nexus.DomainStudio.Avalonia.Models"
    x:Class="Nexus.DomainStudio.Avalonia.Views.MainWindow"
    Width="1200" Height="800"
    Title="Nexus Domain Studio">

    <DockPanel>
        <!-- ViewLocator will see MenuBar (a *ViewModel* with [ViewModelFor]) and instantiate MenuBarView via DI -->
        <ContentControl DockPanel.Dock="Top" Content="{Binding MenuBar}"/>
        <Grid ColumnDefinitions="300,1,*">
            <ContentControl Grid.Column="0" Content="{Binding Explorer}"/>
            <GridSplitter Grid.Column="1" Background="Black" ResizeDirection="Columns"/>
            <Rectangle Grid.Column="2" Fill="Red"/>
        </Grid>
    </DockPanel>
</Window>