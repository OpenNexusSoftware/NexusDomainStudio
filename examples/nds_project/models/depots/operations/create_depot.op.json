{
    "id": "create_depot",
    "name": "CreateDepot",
    "args": [
        { "name": "externalRef", "type": "external_ref", "required": true, "description": "The external reference of the depot provider" },
        { "name": "location", "type": "depot_location", "required": true, "description": "The physical location of the depot" }
    ],
    "emits": [
        {
            "event": "depot_created",
            "description": "Emitted when a new depot is created.",
            "maps": [
                { "property": "depotId", "value": "$this.id" },
                { "property": "externalRef", "value": "$this.externalRef" },
                { "property": "location", "value": "$this.location" },
                { "property": "status", "value": "$this.status" }
            ]
        }
    ]
}