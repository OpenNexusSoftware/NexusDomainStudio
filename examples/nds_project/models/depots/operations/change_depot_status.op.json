{
    "id": "change_depot_status",
    "name": "ChangeDepotStatus",
    "args": [
        { "name": "status", "type": "DepotStatus", "required": true, "description": "The new status of the depot" }
    ],
    "emits": [
        {
            "event": "depot_status_changed",
            "description": "Emitted when a depot's status is changed.",
            "maps": [
                { "property": "depotId", "value": "$this.id" },
                { "property": "status", "value": "$this.status" },
                { "property": "oldStatus", "value": "$prev.status" }
            ]
        }
    ]
}